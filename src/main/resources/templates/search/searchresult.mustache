<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>매장 검색 결과</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #F9F9F6;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            color: #3A6D1F;
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }

        /* 새로운 검색창 스타일 */
        .search-form-area {
            margin-bottom: 30px;
        }

        /* ********** 수정된 부분 시작 ********** */
        /* 검색 정보와 결과 개수를 담는 컨테이너 스타일 */
        .search-summary {
            /* 상하 배치(block)를 위해 flex 제거 */
            margin-bottom: 25px;
            padding: 10px 0;
            border-bottom: 2px solid #eee;
        }

        /* search-info와 results-count에 공통으로 적용될 스타일 */
        .search-text {
            /* 폰트 크기 및 색상 통일 */
            color: #333;
            font-size: 1.1rem;
            font-weight: 600; /* results-count의 굵은 글씨 유지 */
            margin-bottom: 5px; /* 상하 간격 추가 */
            display: block; /* 상하 배치 보장 */
        }

        /* 검색 결과 개수 텍스트에만 특정 색상 적용 (옵션) */
        .results-count-number {
             color: #3A6D1F;
        }

        /* ********** 수정된 부분 끝 ********** */

        .store-card {
            background: white;
            border-radius: 12px;
            padding: 0;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #e0e0e0;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
            overflow: hidden;
            display: flex;
        }

        .store-image {
            width: 400px;
            height: 225px;
            object-fit: cover;
            display: block;
            flex-shrink: 0;
        }

        .store-content {
            padding: 24px;
            flex: 1;
        }

        .store-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
        }

        .store-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
            flex-wrap: wrap;
            gap: 12px;
        }

        .store-title {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .store-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #3A6D1F;
            margin: 0 0 8px 0;
        }

        .badge {
            background-color: #d1ecf1;
            color: #0c5460;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 500;
            display: inline-block;
            margin-bottom: 8px;
        }

        .address {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        .rating-simple {
            color: #666;
            font-size: 0.9rem;
        }

        .rating-stars {
            color: #3A6D1F;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            margin-right: 5px;
        }

        .bookmark-btn {
            font-size: 1.5rem;
            cursor: pointer;
            color: #ddd;
            transition: color 0.2s ease;
            padding: 0;
            background: none;
            border: none;
            line-height: 1;
        }

        .bookmark-btn:hover,
        .bookmark-btn .fa-solid.fa-heart {
            color: #3A6D1F;
        }
        .bookmark-btn .fa-regular.fa-heart:hover {
            color: #3A6D1F;
        }

        .store-actions-header {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .action-btn {
            background: none;
            border: 1px solid #3A6D1F;
            cursor: pointer;
            color: #3A6D1F;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 8px 12px;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            background-color: #3A6D1F;
            color: white;
        }

        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            .store-card {
                flex-direction: column;
            }
            .store-actions-header {
                flex-direction: column;
                width: 100%;
                justify-content: center;
            }
            .action-btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>

</head>
<body>
{{> layout/header}}
<div class="container">
    <div class="header">
        <h1>매장 검색 결과</h1>
    </div>

    <div class="search-form-area">
        <form action="/search" method="get" class="mb-4">
            <div class="input-group">
                <input type="search" name="query" class="form-control" placeholder="가게 이름, 메뉴, 지역 검색" value="{{searchParams.query}}">
                <button class="btn btn-primary" type="submit">검색</button>
            </div>
        </form>
    </div>

    <div class="search-summary">
        <div class="search-info search-text">"{{searchParams.query}}" 검색 결과</div>
        <div class="results-count search-text">

            총 <span class="results-count-number">{{results.size}}</span>개의 매장을 찾았습니다

        </div>
    </div>


    {{#results}}
        <div class="store-card" onclick="location.href='/cafes/{{id}}'">
            <img class="store-image" src="{{heroImageUrl}}" alt="{{name}} 매장 사진" onerror="this.src='/images/placeholder_shop.jpg'; this.style.objectFit='contain';">
            <div class="store-content">
                <div class="store-header">
                    <div class="store-title">
                        <h4 class="store-name">{{name}}</h4>
                        <button id="bookmarkBtn_{{id}}" class="bookmark-btn" onclick="event.stopPropagation();">
                            <i class="{{#isBookmarked}}fa-solid{{/isBookmarked}}{{^isBookmarked}}fa-regular{{/isBookmarked}} fa-heart"></i>
                        </button>
                    </div>
                    <div class="store-actions-header">
                        <button class="action-btn" onclick="event.stopPropagation(); viewMap('{{id}}')">지도보기</button>
                    </div>
                </div>
                <div class="address">{{addressRoad}}</div>
                <div class="rating-simple">
                    <span class="rating-stars" data-rating="{{averageRating}}"></span>
                    {{averageRating}} · 리뷰 {{reviewCount}}
                </div>
            </div>
        </div>
    {{/results}}

    {{^results}}
        <div class="store-card">
            <div class="store-content">
                <div class="alert alert-light border">검색 결과가 없습니다.</div>
            </div>
        </div>
    {{/results}}

</div>

<script>
    function viewStoreDetails(storeId) {
        alert(`${storeId} 상세 정보를 확인합니다.`);
    }

    function viewMap(storeId) {
        if (!storeId) return;
        // 지도 페이지 URL로 이동하면서, highlight 파라미터에 가게 ID를 추가
        window.location.href = `/pages/mainMap?highlight=${storeId}`;
    }

    document.addEventListener('DOMContentLoaded', function() {

        function renderRatingStars() {
            const starContainers = document.querySelectorAll('.rating-stars');

            starContainers.forEach(container => {
                const rating = parseFloat(container.dataset.rating);

                if (isNaN(rating)) {
                    return;
                }

                const fullStars = Math.floor(rating);
                const halfStar = rating - fullStars >= 0.5;

                container.innerHTML = '';

                for (let i = 0; i < fullStars; i++) {
                    const star = document.createElement('i');
                    star.className = 'fa-solid fa-star';
                    container.appendChild(별);
                }

                if (halfStar) {
                    const halfStarIcon = document.createElement('i');
                    halfStarIcon.className = 'fa-solid fa-star-half-stroke';
                    container.appendChild(halfStarIcon);
                }

                const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);
                for (let i = 0; i < emptyStars; i++) {
                    const star = document.createElement('i');
                    star.className = 'fa-regular fa-star';
                    container.appendChild(별);
                }
            });
        }

        function initBookmark() {
            const bookmarkBtns = document.querySelectorAll('.bookmark-btn');

            bookmarkBtns.forEach(bookmarkBtn => {
                bookmarkBtn.addEventListener('click', function() {
                    const heartIcon = this.querySelector('i');
                    const storeName = this.closest('.store-card').querySelector('.store-name').textContent;

                    if (heartIcon.classList.contains('fa-regular')) {
                        heartIcon.classList.remove('fa-regular');
                        heartIcon.classList.add('fa-solid');
                        alert(`${storeName}이(가) 즐겨찾기에 추가되었습니다.`);
                    } else {
                        heartIcon.classList.remove('fa-solid');
                        heartIcon.classList.add('fa-regular');
                        alert(`${storeName}이(가) 즐겨찾기에서 해제되었습니다.`);
                    }
                });
            });
        }

        renderRatingStars();
        initBookmark();
    });
</script>
{{> layout/footer}}
</body>
</html>