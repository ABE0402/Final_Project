<!-- templates/mypage/review_edit.mustache -->
<!doctype html><html lang="ko"><head>
    <meta charset="utf-8"><title>리뷰 수정</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head><body class="bg-body-tertiary">
{{> layout/header}}

<main class="container py-5">
    <h3 class="fw-bold mb-4">리뷰 수정</h3>
    <div class="row g-4">
        <aside class="col-12 col-md-3">{{> mypage/sidebar}}</aside>
        <section class="col-12 col-md-9">
            <div class="card shadow-sm"><div class="card-body p-4">
                <form method="post" action="/mypage/reviews/{{review.id}}/edit">
                    {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                    <div class="mb-3">
                        <label class="form-label">평점</label>
                        <input class="form-control" type="number" name="rating" min="1" max="5" value="{{review.rating}}" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">내용</label>
                        <textarea class="form-control" rows="5" name="content" required>{{review.content}}</textarea>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-outline-secondary" href="/mypage/reviews">취소</a>
                        <button class="btn btn-olive ms-auto" type="submit">저장</button>
                    </div>
                </form>
            </div></div>
        </section>
    </div>
</main>

{{> layout/footer}}
</body></html>
