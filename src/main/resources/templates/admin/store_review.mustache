<!-- templates/admin/store_review.mustache -->
<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8"><title>가게 검토 - 관리자</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
{{> layout/header}}

<main class="container py-5" style="max-width:900px;">
    <h4 class="mb-3">가게 검토</h4>
    {{#rejected}}<div class="alert alert-warning">반려 처리되었습니다.</div>{{/rejected}}

    <div class="card shadow-sm mb-3"><div class="card-body">
        <div class="row g-3">
            <div class="col-md-8">
                <div class="fw-semibold fs-5">{{cafe.name}}</div>
                <div class="text-muted">{{cafe.ownerNick}} · {{cafe.createdAt}}</div>
                <div class="mt-2">{{cafe.address}} {{#cafe.phone}}· {{.}}{{/cafe.phone}}</div>
                {{#cafe.description}}<div class="mt-2">{{.}}</div>{{/cafe.description}}
            </div>
            <div class="col-md-4">
                {{#cafe.heroImageUrl}}
                    <img src="{{.}}" class="img-fluid rounded" alt="대표 이미지"
                         onerror="this.style.display='none'">
                {{/cafe.heroImageUrl}}
            </div>
        </div>
    </div></div>

    <div class="d-flex gap-2">
        <form method="post" action="/admin/stores/pending/{{cafe.id}}/approve" class="d-inline">
            {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
            <input type="hidden" name="note" value="">
            <button class="btn btn-success" type="submit">승인</button>
        </form>

        <form method="post" action="/admin/stores/pending/{{cafe.id}}/reject" class="d-inline"
              onsubmit="return confirm('반려하시겠습니까?');">
            {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
            <input class="form-control" name="reason" placeholder="반려 사유" style="width:300px;">
            <button class="btn btn-outline-danger ms-2" type="submit">반려</button>
        </form>

        <a class="btn btn-secondary ms-auto" href="/admin/stores/pending">목록</a>
    </div>
</main>

{{> layout/footer}}
</body>
</html>
