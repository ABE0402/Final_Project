<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>지도 검색 결과</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        html, body { height: 100%; margin: 0; padding: 0; }
        .main-container { display: flex; height: 100vh; flex-direction: column; }
        .content-wrapper { display: flex; flex-grow: 1; overflow: hidden; }
        #sidebar { width: 400px; border-right: 1px solid #ddd; overflow-y: auto; background-color: #f8f9fa; }
        #map { flex-grow: 1; }
        .place-item { padding: 15px; border-bottom: 1px solid #eee; cursor: pointer; transition: background-color 0.2s ease; }
        .place-item:hover, .place-item.active { background-color: #e9ecef; }
        .place-item h5 { font-size: 1.1rem; font-weight: 600; color: #3A6D1F; }
        .place-item p { margin-bottom: 4px; font-size: 0.9rem; color: #666; }
        .badge-category { background-color: #e2e3e5; color: #555; font-weight: 500; margin-right: 6px; }
    </style>
</head>
<body>

{{> layout/header}}

<div class="main-container">
    <div class="container-fluid p-3 border-bottom">
        <form action="/elasticsearch" method="get" class="mx-auto" style="max-width: 800px;">
            <div class="input-group">
                <input type="search" name="keyword" class="form-control" placeholder="가게 이름, 주소 검색" value="{{keyword}}">
                <button class="btn" style="background-color: #3A6D1F; color: white;" type="submit">검색</button>
            </div>
        </form>
    </div>

    <div class="content-wrapper">
        <aside id="sidebar">
            <div id="results-list">
                <!-- JavaScript가 이 곳에 검색 결과 목록을 채웁니다. -->
            </div>
        </aside>
        <section id="map"></section>
    </div>
</div>

<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey={{kakaoJsKey}}&autoload=false"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        kakao.maps.load(function () {
            const mapContainer = document.getElementById('map');
            const resultsList = document.getElementById('results-list');
            const searchResults = JSON.parse(`{{{resultsJson}}}`);

            if (!mapContainer || !resultsList) return;

            // 지도의 기본 중심 위치 (서울 시청)
            const defaultCenter = new kakao.maps.LatLng(37.566826, 126.9786567);
            const mapOption = {
                center: defaultCenter,
                level: 8
            };
            const map = new kakao.maps.Map(mapContainer, mapOption);

            if (searchResults.length === 0) {
                resultsList.innerHTML = '<div class="p-3 text-muted">검색 결과가 없습니다.</div>';
                return;
            }

            const bounds = new kakao.maps.LatLngBounds();
            let markers = [];

            // 결과 목록과 마커 생성
            searchResults.forEach(place => {
                const position = new kakao.maps.LatLng(place.location.lat, place.location.lon);

                const marker = new kakao.maps.Marker({ position: position });
                marker.setMap(map);
                markers.push(marker);
                bounds.extend(position);

                const infoWindow = new kakao.maps.InfoWindow({
                    content: `<div style="padding:5px;font-size:12px;">${place.name}</div>`
                });

                // 목록 아이템 HTML 생성
                const itemEl = document.createElement('div');
                itemEl.className = 'place-item';
                itemEl.innerHTML = `
                    <h5>${place.name}</h5>
                    <p>
                        <span class="badge badge-category">${place.categoryMajor}</span>
                        <span class="badge badge-category">${place.categoryMiddle}</span>
                        <span class="badge badge-category">${place.categoryMinor}</span>
                    </p>
                    <p class="address">${place.address}</p>
                `;
                resultsList.appendChild(itemEl);

                // 마커와 목록 아이템에 이벤트 연결
                kakao.maps.event.addListener(marker, 'mouseover', () => infoWindow.open(map, marker));
                kakao.maps.event.addListener(marker, 'mouseout', () => infoWindow.close());

                itemEl.addEventListener('click', () => {
                    map.panTo(position);
                    infoWindow.open(map, marker);
                    // 활성 스타일 적용
                    document.querySelectorAll('.place-item').forEach(el => el.classList.remove('active'));
                    itemEl.classList.add('active');
                });
            });

            // 모든 마커가 보이도록 지도 범위 조정
            map.setBounds(bounds);
        });
    });
</script>
</body>
</html>
