<!-- templates/admin/stores_pending.mustache -->
<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8"><title>가게 승인 대기 - 관리자</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
{{> layout/header}}

<main class="container py-5" style="max-width:1100px;">
    <h4 class="mb-3">가게 승인 대기 목록</h4>
    {{#msg}}<div class="alert alert-success">{{.}}</div>{{/msg}}
    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table align-middle mb-0">
            <thead class="table-light">
            <tr>
                <th>ID</th><th>가게명</th><th>점주</th><th>주소</th><th>등록일</th><th></th>
            </tr>
            </thead>
            <tbody>
            {{#cafes}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{ownerNick}}</td>
                    <td>{{address}}</td>
                    <td>{{createdAt}}</td>
                    <td><a class="btn btn-sm btn-primary" href="/admin/stores/pending/{{id}}">검토</a></td>
                </tr>
            {{/cafes}}
            {{^cafes}}
                <tr><td colspan="6" class="text-center text-muted">대기 중인 요청이 없습니다.</td></tr>
            {{/cafes}}
            </tbody>
        </table>
    </div>
</main>

{{> layout/footer}}
</body>
</html>
