<!-- templates/owner/shops_index.mustache -->
<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8"><title>매장 관리</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
{{> layout/header}}

<main class="container py-5">
    <h3 class="fw-bold mb-4">매장 관리</h3>
    {{#msg}}<div class="alert alert-success">{{.}}</div>{{/msg}}

    <div class="row g-4">
        <aside class="col-12 col-md-3">
            <div class="card shadow-sm"><div class="card-body p-0">
                {{> owner/sidebar}}
            </div></div>
        </aside>

        <section class="col-12 col-md-9">
            <div class="card shadow-sm"><div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="m-0">내 매장</h5>
                    <a class="btn btn-olive" href="/owner/shops/new">가게 등록</a>
                </div>

                {{#shops}}
                    <div class="border rounded p-3 mb-3">
                        <div class="d-flex align-items-center gap-3">
                            <img src="{{#heroImageUrl}}{{.}}{{/heroImageUrl}}{{^heroImageUrl}}/images/shop-placeholder.jpg{{/heroImageUrl}}"
                                 alt="hero" class="rounded" style="width:80px;height:80px;object-fit:cover;">
                            <div class="flex-grow-1">
                                <div class="fw-semibold">
                                    {{name}} <span class="badge text-bg-light">{{type}}</span>
                                </div>
                                <div class="small text-muted">{{address}} {{#phone}}· {{.}}{{/phone}}</div>
                                <div class="mt-1">
                                    <span class="badge {{badgeClass}}">{{approvalStatus}}</span>
                                    {{#isRejected}}<span class="text-danger small ms-2">승인 반려 상태</span>{{/isRejected}}
                                    {{#isPending}}<span class="text-muted small ms-2">승인 대기</span>{{/isPending}}
                                </div>
                            </div>
                            <div class="d-flex flex-column gap-2">
                                <a class="btn btn-sm btn-outline-secondary" href="/owner/shops/{{id}}/edit">정보 수정</a>

                                {{#visible}}
                                    <form method="post" action="/owner/shops/{{id}}/close" onsubmit="return confirm('정말 폐업하시겠습니까?');">
                                        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                                        <button class="btn btn-sm btn-outline-danger" type="submit">폐업</button>
                                    </form>
                                {{/visible}}

                                {{^visible}}
                                    <form method="post" action="/owner/shops/{{id}}/reopen" onsubmit="return confirm('재오픈 하시겠습니까?');">
                                        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                                        <button class="btn btn-sm btn-success" type="submit">재오픈</button>
                                    </form>
                                {{/visible}}
                            </div>
                        </div>
                    </div>
                {{/shops}}
                {{^shops}}<div class="text-muted">등록된 매장이 없습니다.</div>{{/shops}}
            </div></div>
        </section>
    </div>
</main>

{{> layout/footer}}
</body>
</html>
