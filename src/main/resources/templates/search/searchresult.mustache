{{> layout/header}}

<div class="container py-5">
    <!-- 검색창: 이전 검색어를 유지하도록 value 속성 추가 -->
    <form action="/search" method="get" class="mb-4">
        <div class="input-group">
            <input type="search" name="query" class="form-control" placeholder="가게 이름, 메뉴, 지역 검색" value="{{searchParams.query}}">
            <button class="btn btn-primary" type="submit">검색</button>
        </div>
    </form>

    <!-- 검색 결과 섹션 -->
    <h2 class="mb-4">검색 결과: '{{searchParams.query}}'</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-1 g-4">
        {{#results}}
            <div class="col">
                <a class="card text-decoration-none text-reset h-100" href="/cafes/{{id}}">
                    <div class="ratio ratio-16x9 bg-light card-img-top"
                         style="background-image:url('{{heroImageUrl}}');"></div>
                    <div class="card-body">
                        <h4 class="card-title mb-1">{{name}}</h4>
                        <span class="badge text-bg-info mb-2">카페</span>
                        <div class="small text-muted text-truncate">{{addressRoad}}</div>
                        <div class="mt-2 small">⭐ {{averageRating}} · 리뷰 {{reviewCount}}</div>
                    </div>
                </a>
            </div>
        {{/results}}

        {{^results}}
            <div class="col">
                <div class="alert alert-light border">검색 결과가 없습니다.</div>
            </div>
        {{/results}}
    </div>
</div>

{{> layout/footer}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
