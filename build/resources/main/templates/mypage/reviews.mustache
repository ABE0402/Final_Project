<!-- templates/mypage/reviews.mustache -->
<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8"><title>마이페이지 - 리뷰관리</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body class="bg-body-tertiary">
{{> layout/header}}

<main class="container py-5">
    <h3 class="fw-bold mb-4">리뷰 관리</h3>
    <div class="row g-4">
        <aside class="col-12 col-md-3">{{> mypage/sidebar}}</aside>

        <section class="col-12 col-md-9">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h5 class="mb-3">내가 작성한 리뷰</h5>

                    {{#reviews}}
                        <div class="border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between">
                                <div class="fw-semibold">★ {{rating}}</div>
                                <div class="small text-muted">{{createdAt}}</div>
                            </div>
                            <div class="small text-muted">작성자: {{nickname}}</div>
                            <div class="mt-2">{{content}}</div>

                            <div class="mt-2 d-flex gap-2 flex-wrap">
                                {{#imageUrl1}}<img src="{{.}}" class="rounded" style="width:96px;height:96px;object-fit:cover">{{/imageUrl1}}
                                {{#imageUrl2}}<img src="{{.}}" class="rounded" style="width:96px;height:96px;object-fit:cover">{{/imageUrl2}}
                                {{#imageUrl3}}<img src="{{.}}" class="rounded" style="width:96px;height:96px;object-fit:cover">{{/imageUrl3}}
                                {{#imageUrl4}}<img src="{{.}}" class="rounded" style="width:96px;height:96px;object-fit:cover">{{/imageUrl4}}
                                {{#imageUrl5}}<img src="{{.}}" class="rounded" style="width:96px;height:96px;object-fit:cover">{{/imageUrl5}}
                            </div>

                            <div class="mt-3 d-flex gap-2">
                                <a class="btn btn-sm btn-outline-secondary" href="/mypage/reviews/{{id}}/edit">수정</a>
                                <form class="m-0" method="post" action="/mypage/reviews/{{id}}/delete" onsubmit="return confirm('삭제하시겠습니까?');">
                                    {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                                    <button class="btn btn-sm btn-outline-danger" type="submit">삭제</button>
                                </form>
                            </div>
                        </div>
                    {{/reviews}}
                    {{^reviews}}<div class="text-muted">작성한 리뷰가 없습니다.</div>{{/reviews}}
                </div>
            </div>
        </section>
    </div>
</main>

{{> layout/footer}}
</body>
</html>
